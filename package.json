{
  "name": "exentriq-bootstrapui-v5",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "clean-dist": "rm -rf dist/*",
    "prepare-dist": "mkdir -p dist/css dist/js",
    "build-css": "sass --no-source-map --load-path=node_modules scss/styles.scss dist/css/styles.css",
    "autoprefixer": "postcss dist/css/styles.css --use autoprefixer -o dist/css/styles.css",
    "minify-css": "postcss dist/css/styles.css --use cssnano -o dist/css/styles.css",
    "copy-bootstrap": "cpx \"node_modules/bootstrap/dist/js/bootstrap.bundle.min.js\" dist/js/",
    "build-css-autoprefixer": "npm run clean-dist && npm run prepare-dist && npm run build-css && npm run autoprefixer && npm run minify-css && npm run copy-bootstrap",
    "watch-css": "sass --watch --no-source-map --load-path=node_modules scss/styles.scss dist/css/styles.css",
    "build-pug": "node scripts/build-pug.js",
    "start-server": "PORT=8000 nodemon server.js --config nodemon.json",
    "start-pug": "concurrently -n \"CSS,PUG,SERVER\" -c \"green,blue,magenta\" \"npm run watch-css\" \"npm run build-pug -- --watch\" \"npm run start-server\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.3.1",
    "bootstrap": "^5.3.0",
    "express": "^4.17.1",
    "node-watch": "^0.7.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "pug": "^3.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.42.1"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "connect-livereload": "^0.6.1",
    "cpx": "^1.5.0",
    "cssnano": "^7.0.7",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.22"
  }
}
