{
  "name": "exentriq-bootstrapui-v5",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "clean-dist": "rm -rf dist/*",
    "prepare-dist": "mkdir -p dist/css dist/js",
    "build-css": "sass --no-source-map --load-path=node_modules scss/styles.scss dist/css/exentriq-boostrap-ui-5.prefixed.css",
    "autoprefixer": "postcss dist/css/exentriq-boostrap-ui-5.prefixed.css -o dist/css/exentriq-boostrap-ui-5.prefixed.css",
    "minify-css": "postcss dist/css/exentriq-boostrap-ui-5.prefixed.css --use cssnano -o dist/css/exentriq-boostrap-ui-5.min.css",
    "clean-temp-css": "rm -f dist/css/exentriq-boostrap-ui-5.prefixed.css",
    "build-js-dev": "esbuild js/index.js --bundle --outfile=dist/js/exentriq-bootstrap-ui-5.js",
    "build-js": "esbuild js/index.js --bundle --minify --outfile=dist/js/exentriq-bootstrap-ui-5.min.js",
    "copy-bootstrap": "cpx \"node_modules/bootstrap/dist/js/bootstrap.bundle.min.js\" dist/js/",
    "watch-css": "sass --watch --no-source-map --load-path=node_modules scss/styles.scss dist/css/exentriq-boostrap-ui-5.css",
    "watch-js": "esbuild js/index.js --bundle --outfile=dist/js/exentriq-bootstrap-ui-5.js --watch",
    "build-assets": "npm run clean-dist && npm run prepare-dist && npm run build-css && npm run autoprefixer && npm run minify-css && npm run clean-temp-css && npm run build-js && npm run copy-bootstrap",
    "build": "npm run build-assets && npm run build-pug",
    "build-assets-dev": "npm run clean-dist && npm run prepare-dist && npm run build-css && npm run autoprefixer && npm run build-js-dev && npm run copy-bootstrap",
    "dev": "concurrently -n \"CSS,JS,PUG,SERVER\" -c \"green,cyan,blue,magenta\" \"npm run watch-css\" \"npm run watch-js\" \"npm run build-pug -- --watch --dev\" \"npm run start-server\"",
    "build-pug": "node scripts/build-pug.js",
    "start-server": "PORT=8000 nodemon server.js --config nodemon.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.3.1",
    "bootstrap": "^5.3.0",
    "express": "^4.17.1",
    "jquery": "^3.7.1",
    "node-watch": "^0.7.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "pug": "^3.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.42.1",
    "velocity-animate": "^1.5.2"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "connect-livereload": "^0.6.1",
    "cpx": "^1.5.0",
    "cssnano": "^7.0.7",
    "esbuild": "^0.25.5",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.22"
  }
}
